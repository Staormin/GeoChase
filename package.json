{
  "name": "geochase",
  "description": "A geoportail-based treasure hunt solver for discovering locations and analyzing geographic challenges",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "dev:coverage": "VITE_COVERAGE=true vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix",
    "lint:translations": "eslint src/locales/*.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "run-s test:unit:run test:e2e:run",
    "test:unit": "vitest",
    "test:unit:run": "vitest run",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:run": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:coverage": "VITE_COVERAGE=true playwright test --config=playwright.coverage.config.ts",
    "test:e2e:coverage:report": "npx nyc report --reporter=text --reporter=html --reporter=lcov",
    "ci": "run-s type-check lint format:check test:unit:run test:e2e:run",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@fontsource/roboto": "5.2.7",
    "@mdi/font": "7.4.47",
    "@turf/turf": "^7.2.0",
    "ol": "^10.6.1",
    "pinia": "^3.0.3",
    "uuid": "^13.0.0",
    "vue": "^3.5.21",
    "vue-i18n": "^11.2.1",
    "vue-router": "^4.5.1",
    "vuetify": "^3.10.1"
  },
  "devDependencies": {
    "@intlify/eslint-plugin-vue-i18n": "^4.1.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@playwright/test": "^1.56.1",
    "@testing-library/vue": "^8.1.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.9.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-vuetify": "^4.2.0",
    "eslint-plugin-i18n-json": "^4.0.1",
    "eslint-plugin-json": "^4.0.1",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "json": "^11.0.0",
    "jsonc-eslint-parser": "^2.4.1",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "sass-embedded": "^1.92.1",
    "typescript": "~5.9.2",
    "unplugin-auto-import": "^20.1.0",
    "unplugin-fonts": "^1.4.0",
    "unplugin-vue-components": "^29.0.0",
    "unplugin-vue-router": "^0.15.0",
    "vite": "^7.1.5",
    "vite-plugin-istanbul": "^7.2.1",
    "vite-plugin-vue-layouts-next": "^1.0.0",
    "vite-plugin-vuetify": "^2.1.2",
    "vitest": "^4.0.6",
    "vue-tsc": "^3.0.7"
  }
}
